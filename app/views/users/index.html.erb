
<div class="col-xs-3">
<h1>User info</h1>
<%= attachment_image_tag current_user, :image, :fill, 100,100,format: 'jpeg'%>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_15422" %>
</div>
</div>


<div class="col-xs-9">
<h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :image, :fill, 100, 100, format: 'jpeg' %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",user_path(user.id) %></td>
    </tr>
      <% end %>
    </tbody>
</table>
</div>