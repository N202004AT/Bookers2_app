<div class="container">
 <p id="notice"></p>
 <div class="row">
  <div class="col-xs-3">
   <h1>User info</h1>
   <%= attachment_image_tag current_user, :image, :fill, 100,100,format: 'jpeg'%>
   <table class="table">
   <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
      <th></th>
    </tr>
   </tbody>
   </table>
　　<div class="row">
     <%= link_to "", edit_user_path(current_user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
　　</div>
　　<h1>New book</h1>
　　<%= form_for(@book) do |f|%>
　　<div class="field row">
　　　<h4>Title</h4>
　　　<%= f.text_field :title %>
　　</div>
　　<div class="field row">
　　　<h4>Opinion</h4>
　　　<%= f.text_area :body %>
　　</div>
　　<div class="action row">
　　　<input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
　　</div>
　　<% end %>
　</div>
<div class="col-xs-9">
<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg' %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",user_path(user.id) %></td>
    </tr>
      <% end %>
    </tbody>
</table>
</div>
</div>
</div>
