<div class="container">
	<p id="notice"></p>
      <h1>User info</h1>
      <%= form_for(@user) do |f| %>
  <div class="field">
      <h4>Name</h4>
      <%= f.text_field :name %>
  </div>
  <div class="field">
      <h4>Image</h4>
      <%= f.attachment_field :image %>
  </div>
  <div class="field">
      <h4>Introduction</h4>
      <%= f.text_area :introduction %>
  </div>
  <div class="actions">
      <%= f.submit 'Update User'%>
  </div>
      <%end%>
</div>
