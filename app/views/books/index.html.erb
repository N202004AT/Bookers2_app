<h1>User info</h1>
<h1>New book</h1>
<%= form_for(@book,url:'/books') do |f|%>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr><th><%= attachment_image_tag book.user, :image, :fill, 100, 100, format: 'jpeg' %>
      <th><%= link_to book.title,book_path(book.id) %></th>
      <th><%= book.body %></th>
      <% end %>
  </thead>
</table>