
<div class="container">
        <p id="notice"></p>
      	<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>
    <div class="field row">
      <label for="book_title">Title</label>
      <div class="col-xs-12">
      <%= f.text_field :title %>
      </div>
    </div>
    <div class="field row">
      <label for="book_opinion">Opinion</label>
      <div class="col-xs-12">
      <%= f.text_area :body %>
      </div>
    </div>
    <div class="actions row">
     <input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
    </div>
    <% end %>
    <%= link_to "Show", book_path(@book.id), class:"book" %> |
    <%= link_to "Back", books_path, class:"back" %>
  </div>
  <div class="col-md-3"></div>
</div>
</div>